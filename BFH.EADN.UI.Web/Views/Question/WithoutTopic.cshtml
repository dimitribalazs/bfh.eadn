@model IEnumerable<BFH.EADN.UI.Web.Models.Management.Question>
@{
    ViewBag.Title = "Question without topic";
}

<h2>Question without topic</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsMultipleChoice)
        </th>
        <th></th>
    </tr>

    @if (Model == null || Model.FirstOrDefault() == null)
    {
        <tr>
            <td colspan="2">
                No questions without topic!
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsMultipleChoice)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
            </tr>
        }
    }
</table>
